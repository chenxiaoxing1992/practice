/****产品案例****/
#pro-menu .pro-menu-btn{cursor: pointer; height: 150px; line-height: 150px;  position: relative;}
#pro-menu .pro-menu-btn img.scale{
    transform:scale(0.85,0.85);
    -moz-transform:scale(0.85,0.85); /*火狐*/
    -ms-transform:scale(0.85,0.85); /* IE 9 */
    -webkit-transform:scale(0.85,0.85); /* Safari and Chrome */
    -o-transform:scale(0.85,0.85); /* Opera */
}



