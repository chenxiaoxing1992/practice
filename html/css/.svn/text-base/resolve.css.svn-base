@media screen and (max-width: 768px){
   /* .li-left li{text-align: left;}*/
    .custorm img{margin-bottom: 10px;}
    .marg-top{margin-top: 0;}
    .customer-favour img{width: 80px; height: 80px;}
    .typical-exam img{width: 80px; height: 80px;}
    #pro-menu .pro-menu-btn img{max-width: 165px;}
}

@media screen and (min-width: 768px){
    .main-content{margin-top: 90px;}
    /****字体大小和配色****/
    .font1{font-size: 30px; color: #000;}
    .font1-active{font-size: 30px; color: #4074E1;}
    .font2{font-size: 22px; color: #000;}
    .font3{font-size: 18px; color: #000;}
    .font3-active{font-size: 18px; color: #4074E1;}
    .font4{font-size: 16px; color: #4A4A4A; line-height: 2em;}
    .font4-active{font-size: 16px; color: #4074E1; line-height: 2em;}
    .font5{font-size: 14px; color: #4A4A4A;}
    .font6{font-size: 16px; color: #9B9b9b; line-height: 2em;}
    .font7{font-size: 14px; color: #000;}

    /****设置距离下面元素的距离****/
    .botm-25{padding-bottom: 25px; padding-top: 40PX;}
    .botm-10{padding-bottom: 10px;}
    .top-botm{padding-top: 40px; padding-bottom: 40px;}
    .add-botm-xian{border-bottom:  1px solid #dedede; padding-bottom: 30px;}
    .main-content section ul li{line-height: 32px;}
    .main-content section ul li:hover{/*color: #4074E1;*/}
    .macbook-space{padding-left: 40px; padding-right: 40px;}

    .typical-exam{/*height: 282px;*/}

    .active::before {
        position: absolute;
        content: " ";
        left: 50%;
        margin-left: -20px;
        bottom: -2px;
        width: 0px;
        height: 0px;
        border-left: 20px solid transparent;
        border-right: 20px solid transparent;
        border-bottom: 20px solid #FFF;
    }
}

